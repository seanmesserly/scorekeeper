datasource db {
  url      = "file:./dev.db"
  provider = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  email      String      @unique
  fName      String
  lname      String
  scoreCards ScoreCard[]
}

model Course {
  id         Int      @id @default(autoincrement())
  name       String
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int
  layouts    Layout[]
}

model Location {
  id     Int     @id @default(autoincrement())
  name   String
  lat    Float
  lon    Float
  course Course?
}

model Layout {
  id         Int         @id @default(autoincrement())
  name       String
  course     Course      @relation(fields: [courseId], references: [id])
  courseId   Int
  holes      Hole[]
  scoreCards ScoreCard[]
}

model Hole {
  it       Int     @id @default(autoincrement())
  number   Int
  par      Int
  distance Int
  layout   Layout  @relation(fields: [layoutId], references: [id])
  layoutId Int
  scores   Score[]
}

model ScoreCard {
  id       Int      @id @default(autoincrement())
  date     DateTime @default(now())
  layout   Layout   @relation(fields: [layoutId], references: [id])
  scores   Score[]
  layoutId Int
  user     User     @relation(fields: [userId], references: [id])
  userId   Int
}

model Score {
  id          Int       @id @default(autoincrement())
  strokes     Int
  hole        Hole      @relation(fields: [holeIt], references: [it])
  holeIt      Int
  scoreCard   ScoreCard @relation(fields: [scoreCardId], references: [id])
  scoreCardId Int
}
